{
  "name": "claude-code-sandbox",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "workspaceFolder": "/workspaces/minecraft-server-manager",
  "initializeCommand": "touch ${localEnv:HOME}/.gitconfig && touch ${localEnv:HOME}/.claude.json && mkdir -p ${localEnv:HOME}/.config/gh",
  "mounts": [
    "source=${localEnv:HOME}/.claude,target=/home/vscode/.claude,type=bind",
    "source=${localEnv:HOME}/.claude.json,target=/home/vscode/.claude.json,type=bind",
    "source=${localEnv:HOME}/.gitconfig,target=/home/vscode/.gitconfig,type=bind,readonly",
    "source=${localEnv:HOME}/.config/gh,target=/home/vscode/.config/gh,type=bind"
  ],
  "appPort": ["5002:5000"],
  "portsAttributes": {
    "5000": {
      "label": "mcctl-console",
      "onAutoForward": "ignore"
    }
  },
  "updateRemoteUserUID": true,
  "postCreateCommand": "claude --version && docker --version && gh --version && echo 'âœ… Claude Code + Docker + GitHub CLI ready'",
  "remoteUser": "vscode"
}
