{
  "name": "e2e",
  "version": "0.1.0",
  "private": true,
  "description": "E2E tests for Admin Service (mcctl-api + mcctl-console)",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ci": "E2E_STOP_SERVICES=true playwright test",
    "test:skip-start": "E2E_SKIP_SERVICE_START=true playwright test",
    "report": "playwright show-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.0",
    "@types/node": "^20.19.0"
  }
}
