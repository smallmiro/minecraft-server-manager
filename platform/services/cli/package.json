{
  "name": "@minecraft-docker/mcctl",
  "version": "0.1.0",
  "description": "CLI tool for managing Docker Minecraft servers with mc-router",
  "type": "module",
  "bin": {
    "mcctl": "dist/index.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "../../scripts",
    "../../../templates"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "test": "node --test",
    "start": "node dist/index.js"
  },
  "keywords": [
    "minecraft",
    "docker",
    "cli",
    "mc-router",
    "server-management"
  ],
  "author": "smallmiro",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "linux",
    "darwin"
  ],
  "dependencies": {
    "@minecraft-docker/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}
