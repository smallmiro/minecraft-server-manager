{
  "name": "@minecraft-docker/mcctl",
  "version": "1.6.1",
  "description": "CLI tool for managing Docker Minecraft servers with mc-router",
  "type": "module",
  "bin": {
    "mcctl": "dist/index.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "test": "find tests -name '*.test.ts' | xargs npx tsx --test",
    "test:unit": "find tests/unit -name '*.test.ts' | xargs npx tsx --test",
    "test:integration": "find tests/integration -name '*.test.ts' | xargs npx tsx --test",
    "start": "node dist/index.js"
  },
  "keywords": [
    "minecraft",
    "docker",
    "cli",
    "mc-router",
    "server-management"
  ],
  "author": "smallmiro",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/smallmiro/minecraft-server-manager.git",
    "directory": "platform/services/cli"
  },
  "homepage": "https://minecraft-server-manager.readthedocs.io/",
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "linux",
    "darwin"
  ],
  "dependencies": {
    "@clack/prompts": "^0.8.0",
    "@minecraft-docker/mod-source-modrinth": "workspace:*",
    "@minecraft-docker/shared": "workspace:*",
    "picocolors": "^1.1.0",
    "tar": "^7.5.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/tar": "^6.1.13",
    "typescript": "^5.3.0"
  }
}
