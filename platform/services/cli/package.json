{
  "name": "@minecraft-docker/mcctl",
  "version": "1.8.0",
  "description": "CLI tool for managing Docker Minecraft servers with mc-router",
  "type": "module",
  "bin": {
    "mcctl": "dist/index.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "scripts",
    "templates",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:watch": "vitest",
    "start": "node dist/index.js",
    "sync-scripts": "rm -rf scripts && cp -r ../../scripts . && rm -f scripts/.gitkeep",
    "prepublishOnly": "npm run sync-scripts"
  },
  "keywords": [
    "minecraft",
    "docker",
    "cli",
    "mc-router",
    "server-management"
  ],
  "author": "smallmiro",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/smallmiro/minecraft-server-manager.git",
    "directory": "platform/services/cli"
  },
  "homepage": "https://minecraft-server-manager.readthedocs.io/",
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "linux",
    "darwin"
  ],
  "dependencies": {
    "@clack/prompts": "^0.8.0",
    "@minecraft-docker/mod-source-modrinth": "workspace:*",
    "@minecraft-docker/shared": "workspace:*",
    "commander": "^12.0.0",
    "js-yaml": "^4.1.0",
    "picocolors": "^1.1.0",
    "pm2": "^6.0.14",
    "rcon-client": "^4.2.5",
    "tar": "^7.5.4"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/tar": "^6.1.13",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
  }
}
