{
  "name": "@minecraft-docker/shared",
  "version": "2.18.0",
  "description": "Shared utilities and types for Minecraft Docker platform",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./utils": {
      "import": "./dist/utils/index.js",
      "types": "./dist/utils/index.d.ts"
    },
    "./docker": {
      "import": "./dist/docker/index.js",
      "types": "./dist/docker/index.d.ts"
    },
    "./domain": {
      "import": "./dist/domain/index.js",
      "types": "./dist/domain/index.d.ts"
    },
    "./application": {
      "import": "./dist/application/index.js",
      "types": "./dist/application/index.d.ts"
    },
    "./infrastructure": {
      "import": "./dist/infrastructure/index.js",
      "types": "./dist/infrastructure/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "test": "npx tsx --test tests/*.test.ts"
  },
  "keywords": [
    "minecraft",
    "docker",
    "shared"
  ],
  "author": "smallmiro",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/smallmiro/minecraft-server-manager.git",
    "directory": "platform/services/shared"
  },
  "homepage": "https://minecraft-server-manager.readthedocs.io/",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.6.2",
    "js-yaml": "^4.1.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0"
  }
}
