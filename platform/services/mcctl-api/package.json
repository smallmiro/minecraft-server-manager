{
  "name": "@minecraft-docker/mcctl-api",
  "version": "0.1.0",
  "description": "REST API server for managing Docker Minecraft servers",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsx watch src/index.ts",
