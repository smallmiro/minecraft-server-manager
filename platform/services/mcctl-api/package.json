{
  "name": "@minecraft-docker/mcctl-api",
  "version": "1.15.4",
  "description": "REST API server for managing Docker Minecraft servers",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mcctl-api": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:pm2": "pm2 start dist/index.js --name mcctl-api",
    "stop:pm2": "pm2 stop mcctl-api",
    "restart:pm2": "pm2 restart mcctl-api",
    "logs:pm2": "pm2 logs mcctl-api",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "minecraft",
    "docker",
    "api",
    "fastify",
    "mc-router",
    "server-management"
  ],
  "author": "smallmiro",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/smallmiro/minecraft-server-manager.git",
    "directory": "platform/services/mcctl-api"
  },
  "homepage": "https://minecraft-server-manager.readthedocs.io/",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.2",
    "@fastify/helmet": "^12.0.1",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.4",
    "@minecraft-docker/shared": "workspace:*",
    "@sinclair/typebox": "^0.34.48",
    "bcrypt": "^6.0.0",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.1",
    "fastify-plugin": "^5.1.0",
    "ip-range-check": "^0.2.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^20.10.0",
    "tsx": "^4.19.2",
    "typescript": "^5.3.0",
    "vitest": "^2.1.8"
  }
}
