{
  "name": "@minecraft-docker/mcctl-console",
  "version": "0.1.0",
  "private": true,
  "description": "Web management console for Docker Minecraft servers",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "postbuild": "cp -r public .next/standalone/platform/services/mcctl-console/ 2>/dev/null || true && cp -r .next/static .next/standalone/platform/services/mcctl-console/.next/ 2>/dev/null || true",
    "start": "next start",
    "start:standalone": "node .next/standalone/platform/services/mcctl-console/server.js",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf .next out"
  },
  "keywords": [
    "minecraft",
    "docker",
    "web-console",
    "next.js",
    "management"
  ],
  "author": "smallmiro",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/smallmiro/minecraft-server-manager.git",
    "directory": "platform/services/mcctl-console"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.0.2",
    "@tanstack/react-query": "^5.90.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "next": "^14.2.0",
    "next-auth": "^4.24.13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.2.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0"
  }
}
