# =============================================================================
# Survival Server Configuration
# =============================================================================
# Server Type: PAPER (optimized vanilla with plugin support)
# Port: 25565 (via Lazymc)
# =============================================================================

# Server Identity
SERVER_NAME=survival
SERVER_TYPE=PAPER
VERSION=1.20.4

# Resources
MEMORY=4G
MAX_PLAYERS=20

# World
LEVEL=survival-world
SEED=

# Game Settings
GAMEMODE=survival
DIFFICULTY=normal
HARDCORE=false
SPAWN_PROTECTION=0
ENABLE_COMMAND_BLOCK=true
PVP=true

# Performance
VIEW_DISTANCE=10
SIMULATION_DISTANCE=8
MAX_TICK_TIME=60000

# RCON (password from .env)
ENABLE_RCON=true

# Paper-specific optimizations
USE_AIKAR_FLAGS=true
